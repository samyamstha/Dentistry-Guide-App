  <TextView
      android:id="@+id/profile"
      android:layout_width="156dp"
      android:layout_height="127dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="221dp"
      android:layout_marginStart="30dp"
      android:background="#330010"
      android:fontFamily="Source Sans Pro"
      android:paddingTop="38dp"
      android:text="My Profile"
      android:textAlignment="center"
      android:textColor="#fff"
      android:textSize="30sp"
      />

  <TextView
      android:id="@+id/courses"

      android:layout_width="156dp"
      android:layout_height="127dp"
      android:layout_alignParentEnd="true"
      android:layout_alignTop="@+id/profile"
      android:layout_marginEnd="30dp"
      android:background="#330010"
      android:fontFamily="Source Sans Pro"
      android:paddingTop="38dp"
      android:text="Courses"
      android:textAlignment="center"
      android:textColor="#fff"
      android:textSize="30sp" />

  <TextView
      android:id="@+id/quizzes"
      android:layout_width="156dp"
      android:layout_height="127dp"
      android:layout_alignParentBottom="true"
      android:layout_alignStart="@+id/profile"
      android:layout_marginBottom="47dp"
      android:fontFamily="Source Sans Pro"
      android:paddingTop="38dp"
      android:text="Quizzes"
      android:textAlignment="center"
      android:textColor="#fff"
      android:textSize="30sp"
      android:background="#330010"/>

  <TextView
      android:id="@+id/scores"
      android:layout_width="156dp"
      android:layout_height="127dp"
      android:layout_alignStart="@+id/courses"
      android:layout_alignTop="@+id/quizzes"
      android:background="#330010"
      android:fontFamily="Source Sans Pro"
      android:paddingTop="38dp"
      android:text="Scores"
      android:textAlignment="center"
      android:textColor="#fff"
      android:textSize="30sp" />
</RelativeLayout>